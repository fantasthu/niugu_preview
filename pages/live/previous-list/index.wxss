@import '../../common/base.wxss';
@import '../../common/flex.wxss';

.list .item{
  border-bottom: 1px solid #e8e8e8;
  padding-bottom: 18rpx;
  margin-bottom: 30rpx;
}
.list .preview-wrap {
  position: relative;
}
.list .preview {
  width: 226rpx;
  /* height: 180rpx; */
  /* height: 100%; */
  height: 148rpx;
}
.preview-wrap .time-wrap {
  position: absolute;
  width: 104rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 20rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  bottom: 25rpx;
  right: 10rpx;
  z-index: 1000;
}
.time-wrap .icon {
  display: inline-block;
  width: 0;
  height: 0;
  border-width: 8rpx 0 8rpx 10rpx;
  border-style: solid;
  border-color: transparent  transparent transparent #fff;/*透明 黄 透明 透明 */
  margin-right: 5rpx;
}
.time-wrap .time{
  display: inline-block;
}


.list .title {
  font-size: 38rpx;
  line-height: 46rpx;
  /* font-weight: 600; */
  /* line-height: 50rpx; */
}
.list .info {
  font-size: 26rpx;
  margin-top: 12rpx;
}

.info-wrap .name {
  max-width: 225rpx;
}
.info-wrap .time {
  text-align: right;
}

.info-wrap{
  margin-left: 20rpx;
}
.loading {
  padding-top: 16rpx;
  text-align: center;
}

.video-item {
  display:flex;
  flex-direction:column;
  justify-content:center;
}
